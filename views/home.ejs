<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
        <title>Home Page</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>

        <div class="container mt-3">
            <div class="row row-cols-4"> 
                <% blogs.forEach(blog=> { %>
                    <div class="card col ml-1 mt-2">
                        <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="..." style="width: 100%;height: 400px;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= blog.title %>
                            </h5>
                            <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include('./partials/scripts.ejs') %>
</body>

</html>